<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="topButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_margin">4dp</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:gravity">start</item>
        <item name="android:padding">@dimen/padding_title</item>
        <item name="android:paddingTop">@dimen/top_padding_title</item>
        <item name="textAllCaps">false</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textSize">@dimen/text_size_22</item>
    </style>

        <style name="settingsToolbarTitleStyle">
            <item name="navigationIconTint">@color/white</item>
            <item name="android:layout_margin">10dp</item>
            <item name="android:layout_gravity">center</item>
            <item name="android:textSize">22sp</item>
            <item name="android:fontFamily">@font/ys_display_medium</item>
            <item name="android:textColor">@color/white</item>
            <item name="android:titleMarginStart">12dp</item>
            <item name="fontWeight">500</item>
        </style>

    <style name="searchInfo">
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/text_size_19</item>
        <item name="android:textColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="searchButton">
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="android:backgroundTint">?attr/colorPrimaryVariant</item>
        <item name="android:textFontWeight">500</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="tabTextAppearance" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="tabTextAppearance">@android:style/TextAppearance.Widget.TabWidget</item>
        <item name="android:textFontWeight">500</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:textColor">?attr/colorPrimaryVariant</item>
    </style>

</resources>