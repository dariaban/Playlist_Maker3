<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="settingsButtons" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:theme">@style/Theme.MyApp</item>
        <item name="android:gravity">start</item>
        <item name="android:textColor">?attr/colorPrimaryVariant</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:backgroundTint">?attr/colorSecondary</item>
        <item name="android:paddingStart">@dimen/medium_padding</item>
        <item name="android:paddingTop">@dimen/big_padding</item>
        <item name="android:paddingEnd">@dimen/small_padding</item>
        <item name="android:paddingBottom">@dimen/big_padding</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="iconTint">?attr/colorOnPrimary</item>
    </style>

    <style name="mainButtons" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:theme">@style/Theme.MyApp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size_22</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="topButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_margin">4dp</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:gravity">start</item>
        <item name="android:padding">@dimen/padding_title</item>
        <item name="android:paddingTop">@dimen/top_padding_title</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size_22</item>
    </style>
    <style name="trackInfo">
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>
    <style name="searchInfo">
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/text_size_19</item>
        <item name="android:textColor">?attr/colorPrimaryVariant</item>
    </style>
    <style name="searchButton">
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="android:backgroundTint">?attr/colorPrimaryVariant</item>
        <item name="textAllCaps">false</item>
    </style>
    <style name="playButtons" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:theme">@style/Theme.MyApp</item>
    </style>
    <style name="tabTextAppearance" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="tabTextAppearance">@android:style/TextAppearance.Widget.TabWidget</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:textColor">?attr/colorPrimaryVariant</item>
    </style>
    <style name="PlayListText">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
    </style>
    <style name="FirstContent">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
    </style>
    <style name="SecondContent">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">11sp</item>
        <item name="maxLines">1</item>
        <item name="android:textColor">@color/gray</item>
    </style>
    <style name="ErrorButtonPlaceholder">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="iconTint">@color/text_color_primary</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="fontWeight">500</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAlignment">center</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:padding">15dp</item>
        <item name="android:backgroundTint">?attr/colorPrimaryVariant</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">54dp</item>
    </style>
    <style name="textPanelHeader">
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textSize">@dimen/text_size_22</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>
    <style name="panelHeaderToolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/padding_4</item>
        <item name="android:layout_marginBottom">@dimen/margin_24</item>
        <item name="android:background">?attr/colorSecondary</item>
        <item name="titleTextAppearance">@style/textPanelHeader</item>
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
        <item name="titleMarginStart">@dimen/margin_16</item>
    </style>
    <dimen name="padding_4">4dp</dimen>
    <dimen name="margin_16">16dp</dimen>
    <dimen name="corner_radius_16">16dp</dimen>
    <dimen name="corner_radius_4">4dp</dimen>

    <style name="CustomShapeAppearanceBottomSheetDialog" >
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">@dimen/corner_radius_16</item>
        <item name="cornerSizeTopLeft">@dimen/corner_radius_16</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>
    <style name="CustomBottomSheet" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/CustomShapeAppearanceBottomSheetDialog</item>
    </style>
    <style name="CustomBottomSheetDialog" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheet</item>
    </style>
    <style name="RoundShapeAppearance" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/corner_radius_4</item>
    </style>
    <style name="CustomMaterialDialog" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="shapeAppearanceMediumComponent">@style/RoundShapeAppearance</item>
        <item name="android:background">@color/white</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="colorPrimary">@color/blue</item>
    </style>
    <style name="PlaylistName">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/ys_display_bold</item>
        <item name="fontWeight">700</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="PlaylistDescription">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="fontWeight">400</item>
        <item name="android:textSize">18sp</item>
        <item name="layout_constraintHorizontal_bias">0</item>
    </style>
    <style name="YSRegular16">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textSize">@dimen/text_size_16</item>
    </style>
    <style name="tabText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_19</item>
        <item name="fontWeight">400</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textAlignment">center</item>
    </style>
    <style name="SettingsBtn" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:textColor">?attr/colorPrimaryVariant</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:gravity">start</item>
        <item name="iconGravity">end</item>
        <item name="iconTint">@color/gray</item>
        <item name="android:backgroundTint">?attr/colorSecondary</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>
</resources>