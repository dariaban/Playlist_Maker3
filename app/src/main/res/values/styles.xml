<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="settingsButtons" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:theme">@style/Theme.MyApp</item>
        <item name="android:gravity">start</item>
        <item name="android:textColor">?attr/colorPrimaryVariant</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:backgroundTint">?attr/colorSecondary</item>
        <item name="android:paddingStart">@dimen/medium_padding</item>
        <item name="android:paddingTop">@dimen/big_padding</item>
        <item name="android:paddingEnd">@dimen/small_padding</item>
        <item name="android:paddingBottom">@dimen/big_padding</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="iconTint">?attr/colorOnPrimary</item>
    </style>

    <style name="mainButtons" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:theme">@style/Theme.MyApp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size_22</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="MySwitchStyle" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="useMaterialThemeColors">false</item>
        <item name="trackTint">@animator/selector_switch_track</item>
        <item name="thumbTint">@animator/selector_switch_thumb</item>
        <item name="android:width">32dp</item>
        <item name="height">18dp</item>
    </style>

    <style name="topButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:gravity">start</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size_22</item>
        <item name="android:textColor">?attr/colorPrimaryVariant</item>
    </style>
</resources>